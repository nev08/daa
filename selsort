include<stdio.h>
int main()
{
	int arr[20],n;
	printf("enter size:");
	scanf("%d",&n);
	printf("enter the array elements:");
	for(int i=0;i<n;i++)
	{
		scanf("%d",&arr[i]);
	}
	for(int i=0;i<n-1;i++)
	{
		int m=i;
		for(int j=i+1;j<n;j++)
		 if(arr[m]>arr[j])
		  m=j;
		int t=arr[m];
		arr[m]=arr[i];
		arr[i]=t;
	}
	printf("sorted array :\n");
	for(int i=0;i<n;i++)
	{
		printf(" %d",arr[i]);
	}
}
	
